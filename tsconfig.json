{
  "compilerOptions": {
    "paths": {
      "worm-ui": ["./src"]
    },
    "outDir": "dist",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": false,
    "declaration": true, // 生成定义文件
    "declarationMap": true, // 生成定义sourceMap
    "declarationDir": "dist" // 定义文件输出目录
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
  "exclude": ["./**/*.spec.*", "src/main.ts", "./**/prev.ts", "./**/prev/*.ts"]
}
